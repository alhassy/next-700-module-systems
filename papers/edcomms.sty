\def\eddir#1{\raise1pt\hbox{\footnotesize #1}}

\long\def\edcomm#1#2{\ifedcomms{\fbox{\bf [ #1:} {\sl #2} \fbox{\bf ]}}\fi}
\def\edmark#1{\ifedcomms{\fbox{\bf [ #1 ]}}\fi}

\long\def\edchange#1#2#3{\ifedcomms{\fbox{\bf [ #1: \eddir{replace:}} #2
\fbox{\eddir{with:}} #3 \fbox{\bf ]}}\else{#3}\fi}
\long\def\eddelete#1#2{\ifedcomms{\fbox{\bf [ #1: \eddir{delete:}} #2 \fbox{\bf ]}}\fi}
\long\def\edinsert#1#2{\ifedcomms{\fbox{\bf [ #1: \eddir{insert:}} #2
\fbox{\bf ]}}\else{#2}\fi}


